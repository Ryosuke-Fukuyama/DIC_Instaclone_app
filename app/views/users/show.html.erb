<h1><%= @user.name %>のページ</h1>
<% if @user.image.url != nil %>
  <%= image_tag @user.image.url, size: '200x200' %>
<% else %>
<%= image_tag 'no_image.png', size: '200x200' %>
<% end %>
<p><%= link_to '画像削除', user_path(@user.id),
  method: :delete,data: { confirm: '削除しますか？' } %></p>
<p><%= link_to 'プロフィール編集', edit_user_path(@user) %></p>