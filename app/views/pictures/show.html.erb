<h1>投稿詳細画面</h1>
<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<p id="notice"><%= notice %></p>
<p>
  <strong>Image:</strong>
  <%= image_tag @picture.image.url %>
</p>
<p>コメント: <%= @picture.content %></p>
<%= link_to '投稿を編集', edit_picture_path(@picture) %> |
<%= link_to '投稿を削除', picture_path(@picture.id),
      method: :delete, data: { confirm: '削除しますか？' } %> |
<%= link_to '一覧に戻る', pictures_path %>